// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  uname     String   @id @map("_id")
  name      String
  email     String   @unique
  password  String
  img       String   @default("")
  bio       String   @default("")
  createdAt DateTime @default(now())
}

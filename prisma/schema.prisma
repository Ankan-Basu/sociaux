generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(auto()) @map("_id") @db.ObjectId
  uname        String       @unique
  name         String
  email        String       @unique
  password     String
  img          String       @default("")
  bio          String       @default("")
  createdAt    DateTime     @default(now())
  notification Notification?
}

